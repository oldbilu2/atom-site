name: Obfuscate and Deploy

on:
  push:
    branches:
      - main

jobs:
  obfuscate:
    runs-on: ubuntu-latest

    steps:
      # Step 1: Checkout do repositório
      - name: Checkout code
        uses: actions/checkout@v2

      # Step 2: Instalar Node.js (caso esteja usando Terser ou outra ferramenta JS)
      - name: Set up Node.js
        uses: actions/setup-node@v2
        with:
          node-version: '16'

      # Step 3: Instalar dependências (Terser no caso)
      - name: Install dependencies
        run: |
          npm install terser

      # Step 4: Obfuscar o código JavaScript
      - name: Obfuscate JavaScript code
        run: |
          npx terser src/index.js -o dist/index.min.js --compress --mangle

      # Step 5: Subir os arquivos obfuscados
      - name: Commit obfuscated code
        run: |
          git config --global user.name 'GitHub Actions'
          git config --global user.email 'actions@github.com'
          git add dist/*
          git commit -m 'Obfuscate code'
          git push
